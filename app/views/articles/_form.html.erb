<div class="container">
  
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @article %>
      <%= form_with model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true do |form| %>
        <div class="form-group row mt-4">
            <%= form.label :title, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
            </div>
        </div>
        <div class="form-group row mt-4">
          <%= form.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
          <div class="form-group row mt-4">
            <%= form.label :category, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Make your selection (can be empty):"}, { multiple: true, size: 2, class: "form-select shadow rounded"} )%>

        </div>
    </div>
      
        
        <div class="form-group row mt-4 justify-content-center">
          <%= form.submit class: "btn btn-outline-light" %>
        </div> 
      <% end %>
      
    </div>
    <div class="m-3">
    <%= link_to "[ Cancel and return to articles listing page ]", articles_path, class: "text-info" %>
    </div>
  </div>
</div>