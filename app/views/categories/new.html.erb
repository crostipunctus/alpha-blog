
<h1 class="text-center mt-4">Create a new category</h1>

<div class="container">
  
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @category %>
      <%= form_with model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true do |form| %>
        <div class="form-group row mt-4">
            <%= form.label :name, "Category name", class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Category name" %>
            </div>
        </div>
        
        <div class="form-group row mt-4 justify-content-center">
          <%= form.submit class: "btn btn-outline-light" %>
        </div> 
      <% end %>
      
    </div>
    <div class="m-3">
    <%= link_to "[ Cancel and return to articles listing page ]", articles_path, class: "text-info" %>
    </div>
  </div>
</div>