<div class="container">
  
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @user %>
      <%= form_with model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true do |form| %>
        <div class="form-group row mt-4">
            <%= form.label :username, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Username" %>
            </div>
        </div>
        <div class="form-group row mt-4">
          <%= form.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Email" %>
          </div>
        </div>
         <div class="form-group row mt-4">
          <%= form.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Password" %>
          </div>
        </div>
       
        
        <div class="form-group row mt-4 justify-content-center">
          <%= form.submit(@user.new_record? ? "Sign up" : "Update", class: "btn btn-outline-light" )%>
        </div> 
      <% end %>
      
    </div>
    <div class="m-3">
    <%= link_to "[ Cancel and return to articles listing page ]", articles_path, class: "text-info" %>
    </div>
  </div>
</div>